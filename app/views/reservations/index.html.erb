<%= render "partial/navbar" %>

<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="listing-content">
          <div class="row">
            <% @reservations.reverse.each do |reservation| %>
              <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="listing-box">
                  <div class="listing-user-data">
                    <div class="listing-user-image listing-user-data-content">
                      <img src="<%= "/user_images/#{reservation.listing.user.image}" %>">
                    </div>
                    <div class="listing-user-name listing-user-data-content">
                      <%= link_to(reservation.listing.user.name, "/users/#{reservation.listing.user.id}") %>
                    </div>
                  </div>
                  <div class="listing-data">
                    <div class="listing-wrap">
                        <%= link_to image_tag(reservation.listing.listing_image.url, {:border => '0'}), "/listings/#{reservation.listing.id}" %>
                    </div>
                    <div class="listing-title">
                      <%= reservation.listing.listing_title %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
