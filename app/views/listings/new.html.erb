<%= render "partial/navbar" %>

<div class="main posts-new">
  <div class="container">
    <div class="contents">
      <h1 class="form-heading">投稿する</h1>
      <div class="form">
        <div class="form-body">
          <% @listing.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>

          <%= form_for @listing do |f| %>
            <div class="form-group">
              <%= f.label :画像 %>
              <%= f.file_field :listing_image %>
            </div>
            <div class="form-group">
              <%= f.label :食材・食品名 %>
              <%= f.text_field :listing_title, class: 'form-control', required: 'true' %>
            </div>
            <div class="form-group">
              <%= f.label :概要 %>
              <%= f.text_area :listing_content, class: 'form-control', required: 'true' %>
            </div>

            <%= f.submit "投稿" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
