<%= render "partial/navbar" %>

<div class="main posts-index">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image}" %>">
      <h2><%= @user.name %></h2>
      <p><%= @user.profile %></p>
      <% if @user.id == current_user.id %>
        <%= link_to("編集", edit_user_registration_path) %>
        <%= link_to("削除", user_registration_path, {method: "delete"}) %>
      <% end %>
    </div>
  </div>
</div>
