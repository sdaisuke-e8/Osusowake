<%= render "partial/navbar" %>

<div class="main users-edit">
  <div class="container">
    <div class="contents">
      <div class="form-heading">プロフィールの編集</div>
      <div class="form users-form">
        <div class="form-body">
          <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
            <div class="form-error">
              <%= devise_error_messages! %>
            </div>

            <div class="form-group">
              <%= f.label :ユーザー名 %>
              <%= f.text_field :name, autofocus: true, autocomplete: "email"  %>
            </div>
            <div class="form-group">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group">
              <%= f.label :プロフィール %>
              <%= f.text_field :profile, autofocus: true, autocomplete: "email"  %>
            </div>

            <%= f.submit "保存" %>
          <% end %>

          <div class="form-links-edit">
            <%= link_to "キャンセル", user_path(current_user) %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
